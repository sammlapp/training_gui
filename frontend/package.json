{
  "name": "bioacoustics-training-gui",
  "version": "1.0.0",
  "description": "Cross-platform desktop app for bioacoustics ML training and inference",
  "main": "src/main.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:electron": "node scripts/build-electron.js",
    "build:python-env": "node build-scripts/build-python-env.js",
    "build:python-env-fast": "node build-scripts/build-python-env-fast.js",
    "build:python-pyinstaller": "node build-scripts/build-python-pyinstaller.js",
    "build:python-executables": "node build-scripts/build-all-python-executables.js",
    "test:python-env": "node test-python-env.js",
    "fix:http-server": "node fix-http-server.js",
    "fix:permissions": "node fix-permissions.js",
    "build:all": "npm run build && npm run build:electron",
    "electron-dev": "concurrently \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && cross-env NODE_ENV=development electron src/main.js\"",
    "electron:build": "npm run build:all && electron-builder",
    "electron:pack": "npm run build:all && electron-builder --dir",
    "dist": "node build-dist.js",
    "dist:mac": "node build-dist.js",
    "dist:conda": "npm run build:all && npm run build:python-env && npm run fix:permissions && electron-builder",
    "dist:conda:mac": "npm run build:all && npm run build:python-env && npm run fix:permissions && electron-builder --mac",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.0",
    "@mui/material": "^5.15.0",
    "electron-is-dev": "^2.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "^5.0.1",
    "react-select": "^5.10.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.0",
    "wait-on": "^7.0.1"
  },
  "homepage": "./",
  "author": "Bioacoustics Training GUI Team",
  "build": {
    "extends": null,
    "appId": "com.bioacoustics.traininggui",
    "productName": "Bioacoustics Training GUI",
    "directories": {
      "output": "../dist"
    },
    "compression": "store",
    "npmRebuild": false,
    "buildDependenciesFromSource": false,
    "files": [
      "build/**/*",
      "dist-electron/**/*",
      "assets/**/*",
      "!assets/*.ai",
      "node_modules/**/*",
      "!node_modules/.cache",
      "!node_modules/**/*.d.ts",
      "!node_modules/**/*.map"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!**/__pycache__/**/*",
          "!**/*.pyc",
          "!**/*.pyo",
          "!**/.DS_Store"
        ]
      },
      {
        "from": "python-dist",
        "to": "python-dist",
        "filter": [
          "**/*",
          "!**/__pycache__/**/*",
          "!**/*.pyc",
          "!**/*.pyo",
          "!**/.DS_Store"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": false,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "icon": "assets/icon.svg",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "category": "Development",
      "icon": "assets/icon.svg",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "dmg": {
      "title": "Bioacoustics Training GUI",
      "icon": "assets/icon.icns",
      "background": null,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}